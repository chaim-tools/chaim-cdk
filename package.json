{
  "name": "chaim-cdk",
  "version": "0.1.2",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test && vitest run",
    "test:packages": "pnpm -r test",
    "test:root": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:coverage": "vitest run --coverage",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rm -rf cdk.out && rm -rf packages/examples/*/cdk.out"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "^3.883.0",
    "@aws-sdk/client-secrets-manager": "^3.883.0",
    "@chaim-tools/chaim-bprint-spec": "workspace:*",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "aws-cdk-lib": "^2.0.0",
    "constructs": "^10.0.0",
    "typescript": "~5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chaim-tools/chaim-cdk.git"
  },
  "bugs": {
    "url": "https://github.com/chaim-tools/chaim-cdk/issues"
  },
  "homepage": "https://github.com/chaim-tools/chaim-cdk#readme"
}
